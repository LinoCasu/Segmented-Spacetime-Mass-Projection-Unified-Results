#!/usr/bin/make -f
export PYBUILD_NAME=segmented-spacetime-suite-extended

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_test:
	# Skip tests during build (expensive suite runs post-install)
	:

override_dh_install:
	# Fix WSL/Windows executable bit on .install files
	chmod -x debian/*.install 2>/dev/null || true
	dh_install

override_dh_python3:
	dh_python3
